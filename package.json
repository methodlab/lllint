{
  "name": "lllint-extension",
  "displayName": "LLLint",
  "description": "AI-powered code linting and formatting using large language models.",
  "version": "0.0.3",
  "publisher": "methodlab",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/methodlab/lllint.git"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "lint",
    "linting",
    "formatting",
    "code quality",
    "openai",
    "language model",
    "llm"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "lllint-panel",
          "name": "LLLint",
          "title": "LLLint",
          "icon": "lightbulb"
        }
      ]
    },
    "views": {
      "lllint-panel": [
        {
          "id": "lllintMain",
          "name": "Notes"
        }
      ]
    },
    "commands": [
      {
        "command": "lllint.smartFormat",
        "title": "LLLint: Format Current File"
      },
      {
        "command": "lllint.editSystemPrompt",
        "title": "LLLint: Edit System Prompt"
      },
      {
        "command": "lllint.editCodingGuidelines",
        "title": "LLLint: Edit Coding Guidelines"
      },
      {
        "command": "lllint.applyFormatting",
        "title": "LLLint: Apply Formatting Changes"
      },
      {
        "command": "lllint.renumberCodingGuidelines",
        "title": "LLLint: Renumber Coding Guidelines"
      }
    ],
    "keybindings": [
      {
        "command": "lllint.applyFormatting",
        "key": "ctrl+s",
        "mac": "cmd+s",
        "when": "editorTextFocus && resourceScheme == lllint-diff"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lllint.applyFormatting",
          "when": "resourceScheme == lllint-diff",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "LLLint Configuration",
      "properties": {
        "lllint.apiKey": {
          "type": "string",
          "description": "OpenAI API Key",
          "default": ""
        },
        "lllint.model": {
          "type": "string",
          "description": "OpenAI model to use (e.g., gpt-4o, gpt-4o-mini)",
          "default": "gpt-4o-mini"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce-package": "vsce package --no-yarn"
  },
  "devDependencies": {
    "@types/diff": "^5.2.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "diff": "^7.0.0"
  }
}
